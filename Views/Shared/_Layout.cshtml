<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/bootstrap2.min.css">
    <link rel="stylesheet" href="~/Content/styles.css">
    <title>registro climatico - @ViewBag.Title</title>
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header" style="color: #e8ebec;">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Registro climatico", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse" style="color: #e8ebec;">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Insertar", "Insertar", "Home")</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="fixed-top">
            <div id="main">
                <div class="wrapperMain">
                    <div class="container">
                        <div class="row center-main">
                            <div class="col-md-8 col-lg-6">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="fixed-top">
            <div id="login">
                <div class="wrapper">
                    <div class="container">
                        <div class="row center-login">
                            <div class="col-md-8 col-lg-6">
                                @RenderBody()
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/chosen")
    @RenderSection("scripts", required: false)
</body>
</html>
